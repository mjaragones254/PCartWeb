@model IEnumerable<PCartWeb.Models.CoopDetailsModel>

@{
    ViewBag.Title = "ViewPendingCoop";
}

<h4>Pending Coop</h4>
<br />

<head>
    <link href="~/Content/css/customStyle.css" rel="stylesheet" />
    <style>
        th {
            color: white;
        }
    </style>
</head>

<p>
    @Html.ActionLink("View Pending Admin Accounts", "ViewPendingAdminAccnts")
</p>
<div class="table-responsive table-hover">
    <table class="table">
        <tr class="bg-dark">
            <th>
                @Html.DisplayNameFor(model => model.CoopName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coop_Created)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CoopName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coop_Updated)
                </td>
                <td>
                    @Html.ActionLink("Details", "DisplayCoopDetailReq", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
